@model GiftCard

<h3 class="pull-right">@Model.GiftCardPrice.ToString("c")</h3>

<div class="addToCart">
    <p class="button">
        <a class="btn btn-secondary" asp-controller="ShoppingCart" asp-action="AddToShoppingCart"
           asp-route-giftCardid="@Model.GiftCardId">Add to cart</a>
    </p>

</div>


